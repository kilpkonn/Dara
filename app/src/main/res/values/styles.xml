<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="app_background">
        <item name="android:background">@drawable/app_background_gradient</item>
    </style>

    <style name="game_board_background">
        <item name="android:background">@drawable/game_board_background</item>
    </style>

    <style name="game_board_button">
        <item name="android:background">@drawable/button_gradient</item>
    </style>

</resources>
