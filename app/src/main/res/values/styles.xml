<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="app_background">
        <item name="android:background">@drawable/app_background_gradient</item>
    </style>

    <style name="game_board_background">
        <item name="android:background">@drawable/game_board_background</item>
    </style>

    <style name="game_board_button">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="player_stats">
        <item name="android:background">@drawable/stats_background_gradient</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="player_stats_highlight">
        <item name="android:background">@drawable/player_stats_highlight_gradient</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="player_stats_text">
        <item name="android:layout_margin">@dimen/stats_line_margin</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
    </style>

    <style name="app_title">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">48dp</item>
    </style>

    <style name="player_select">
        <item name="android:background">@drawable/player_select_background_gradient</item>
        <item name="android:popupBackground">@drawable/player_select_background_gradient</item>
    </style>

    <style name="start_button">
        <item name="android:background">@drawable/start_background_gradient</item>
    </style>

</resources>
